<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <div class="container">
                <nav class="header-nav">
                    <ul class="links-list">
                        <li class="logo">SuperBlog</li>
                        <li><a href="{{ path('home') }}">Home</a></li>
                        <li><a href="{{ path('articles') }}">Articles</a></li>
                        <li><a href="{{ path('categories') }}">Categories</a></li>
                    </ul>
                    <ul class="cta-list">
                        {% if app.user %}
                            <li><a href="{{ path('profile') }}">{{ app.user.firstname }} {{ app.user.lastname }}</a></li>
                            <li><a href="{{ path('app_logout') }}">Logout</a></li>
                        {% else %}
                            <li><a href="{{ path('register') }}">Sign up</a></li>
                            <li><a href="{{ path('app_login') }}">Log In</a></li>
                        {% endif %}
                        
                    </ul>
                </nav>
            </div>
        </header>
        {% block body %}{% endblock %}
        <footer class="footer">
            <div class="container">
                <p>Â© 2021 - My super Blog</p>
                <a href="#">Privacy Policy</a>
                <a href="#">Notices</a>
            </div>
        </footer>
    </body>
</html>
